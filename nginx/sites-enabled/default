# misc ssl websocket passthrough to 8888
server {
	listen 8883 ssl;

	location / {
		proxy_pass http://localhost:8888/;
		proxy_http_version 1.1;
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection "upgrade";
	}
}
